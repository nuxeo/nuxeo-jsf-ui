<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.nuxeo.ecm.platform</groupId>
    <artifactId>nuxeo-jsf-ui</artifactId>
    <version>11.4</version>
  </parent>

  <groupId>org.nuxeo.jsf.packages</groupId>
  <artifactId>nuxeo-jsf-ui-packages</artifactId>
  <packaging>pom</packaging>
  <name>Nuxeo JSF UI Packages</name>

  <modules>
    <module>nuxeo-nxr-jsf-ui</module>
    <module>nuxeo-marketplace-jsf-ui</module>
    <module>nuxeo-3d-jsf-ui-package</module>
    <module>nuxeo-csv-jsf-ui-package</module>
    <module>nuxeo-diff-jsf-ui-package</module>
    <module>nuxeo-diff-pictures-jsf-ui-package</module>
    <module>nuxeo-drive-jsf-ui-package</module>
    <module>nuxeo-easyshare-jsf-ui-package</module>
    <module>nuxeo-groups-rights-audit-jsf-ui-package</module>
    <module>nuxeo-imap-connector-jsf-ui-package</module>
    <module>nuxeo-liveconnect-jsf-ui-package</module>
    <module>nuxeo-multi-tenant-jsf-ui-package</module>
    <module>nuxeo-quota-jsf-ui-package</module>
    <module>nuxeo-shibboleth-invitation-jsf-ui-package</module>
    <module>nuxeo-shibboleth-login-jsf-ui-package</module>
    <module>nuxeo-signature-jsf-ui-package</module>
    <module>nuxeo-smart-search-jsf-ui-package</module>
    <module>nuxeo-template-rendering-jsf-ui-package</module>
    <module>nuxeo-tree-snapshot-jsf-ui-package</module>
    <module>nuxeo-user-registration-jsf-ui-package</module>
    <module>nuxeo-virtual-navigation-jsf-ui-package</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.nuxeo.build</groupId>
        <artifactId>ant-assembly-maven-plugin</artifactId>
        <configuration>
          <buildFiles>
            <buildFile>${basedir}/../src/main/assemble/assembly.xml</buildFile>
          </buildFiles>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
